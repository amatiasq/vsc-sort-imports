{
  "name": "sort-imports",
  "displayName": "sort-imports",
  "description": "Sort ES6 imports automatically.",
  "version": "3.0.0",
  "galleryBanner": {
    "color": "#2980b9",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/amatiasq/vsc-sort-imports/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amatiasq/vsc-sort-imports.git"
  },
  "icon": "assets/logo.png",
  "publisher": "amatiasq",
  "engines": {
    "vscode": "^1.6.0"
  },
  "homepage": "https://github.com/amatiasq/vsc-sort-imports/blob/master/README.md",
  "license": "ISC",
  "categories": [
    "Languages",
    "Other"
  ],
  "keywords": [
    "ES6",
    "ES2015",
    "Sort",
    "Sorting",
    "Import"
  ],
  "activationEvents": [
    "onCommand:extension.sort-imports",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "sort-imports.sort",
        "title": "Sort imports"
      },
      {
        "command": "sort-imports.save-without-sorting",
        "title": "Save file without sorting imports"
      }
    ],
    "configuration": {
      "title": "Sort Imports configuration",
      "properties": {
        "sort-imports.blank-lines-after": {
          "type": "number",
          "default": 2,
          "description": "Blank lines after import declarations."
        },
        "sort-imports.sort-type": {
          "type": "string",
          "default": "by-module-name",
          "description": "Sorting algorithm. Valid values: 'by-module-name', 'by-imported-name'."
        },
        "sort-imports.on-save": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sort imports on save."
        },
        "sort-imports.suppress-warnings": {
          "type": "boolean",
          "default": false,
          "description": "Suppress warnings when sorting fails."
        },
        "sort-imports.languages": {
          "type": "array",
          "default": ["javascript", "typescript"],
          "description": "Languages to sort on save."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.0.46",
    "import-sort-parser": "^3.0.0",
    "import-sort-style": "^3.0.0",
    "typescript": "^2.0.6",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "@types/core-js": "^0.9.41",
    "import-sort": "3.2.0",
    "import-sort-config": "3.2.0",
    "import-sort-parser-babylon": "3.2.0",
    "import-sort-parser-typescript": "3.2.0",
    "import-sort-style-eslint": "3.0.0",
    "import-sort-style-module": "3.0.0"
  }
}

